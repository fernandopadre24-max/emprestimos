{
  "entities": {
    "Customer": {
      "title": "Customer",
      "description": "Represents a customer who can apply for loans.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the customer."
        },
        "name": {
          "type": "string",
          "description": "The customer's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The customer's email address."
        },
        "cpf": {
          "type": "string",
          "description": "The customer's CPF (Brazilian individual taxpayer registry)."
        },
        "address": {
          "type": "string",
          "description": "The customer's street address."
        },
        "postalCode": {
          "type": "string",
          "description": "The customer's postal code."
        },
        "houseNumber": {
          "type": "string",
          "description": "The customer's house number."
        },
        "city": {
          "type": "string",
          "description": "The customer's city."
        },
        "registrationDate": {
          "type": "string",
          "format": "date-time",
          "description": "The date the customer was registered."
        },
        "loanStatus": {
          "type": "string",
          "enum": [
            "Ativo",
            "Pago",
            "Inadimplente"
          ],
          "description": "The current status of the customer's loans."
        }
      },
      "required": [
        "name",
        "email",
        "cpf",
        "registrationDate",
        "loanStatus"
      ]
    },
    "Loan": {
      "title": "Loan",
      "description": "Represents a loan provided to a customer.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the loan."
        },
        "loanCode": {
          "type": "string",
          "description": "A user-friendly code for the loan (e.g., CS-001)."
        },
        "customerId": {
          "type": "string",
          "description": "The ID of the customer this loan belongs to."
        },
        "amount": {
          "type": "number",
          "description": "The principal amount of the loan."
        },
        "interestRate": {
          "type": "number",
          "description": "The monthly interest rate (as a decimal, e.g., 0.05 for 5%)."
        },
        "term": {
          "type": "number",
          "description": "The loan term in months."
        },
        "lateFeeRate": {
          "type": "number",
          "description": "The daily late fee rate (as a decimal)."
        },
        "startDate": {
          "type": "string",
          "format": "date-time",
          "description": "The start date of the loan."
        },
        "status": {
          "type": "string",
          "enum": [
            "Em dia",
            "Atrasado",
            "Pago"
          ],
          "description": "The current status of the loan."
        },
        "installments": {
          "type": "array",
          "description": "An array of all installments for the loan.",
          "items": {
            "$ref": "#/entities/Installment"
          }
        }
      },
      "required": [
        "loanCode",
        "customerId",
        "amount",
        "interestRate",
        "term",
        "lateFeeRate",
        "startDate",
        "status",
        "installments"
      ]
    },
    "Installment": {
      "title": "Installment",
      "description": "Represents a single installment of a loan.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the installment."
        },
        "loanId": {
          "type": "string",
          "description": "The ID of the loan this installment belongs to."
        },
        "installmentNumber": {
          "type": "number",
          "description": "The number of the installment in the sequence (e.g., 1, 2, 3...)."
        },
        "amount": {
          "type": "number",
          "description": "The amount due for this installment."
        },
        "paidAmount": {
          "type": "number",
          "description": "The total amount paid for this installment."
        },
        "dueDate": {
          "type": "string",
          "format": "date-time",
          "description": "The due date for the installment."
        },
        "status": {
          "type": "string",
          "enum": [
            "Paga",
            "Pendente"
          ],
          "description": "The payment status of the installment."
        }
      },
      "required": [
        "loanId",
        "installmentNumber",
        "amount",
        "dueDate",
        "status"
      ]
    },
    "BankAccount": {
      "title": "BankAccount",
      "description": "Represents a bank account.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the bank account."
        },
        "banco": {
          "type": "string",
          "description": "The name of the bank."
        },
        "agencia": {
          "type": "string",
          "description": "The bank agency number."
        },
        "conta": {
          "type": "string",
          "description": "The bank account number."
        },
        "saldo": {
          "type": "number",
          "description": "The current balance of the account."
        }
      },
      "required": [
        "banco",
        "agencia",
        "conta",
        "saldo"
      ]
    },
    "Transaction": {
      "title": "Transaction",
      "description": "Represents a single financial transaction.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the transaction."
        },
        "accountId": {
          "type": "string",
          "description": "The ID of the bank account this transaction belongs to."
        },
        "description": {
          "type": "string",
          "description": "A description of the transaction."
        },
        "amount": {
          "type": "number",
          "description": "The transaction amount."
        },
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time of the transaction."
        },
        "type": {
          "type": "string",
          "enum": [
            "receita",
            "despesa"
          ],
          "description": "The type of transaction (income or expense)."
        },
        "category": {
          "type": "string",
          "description": "The category of the transaction."
        },
        "sourceId": {
          "type": "string",
          "description": "Optional ID to link the transaction to its source (e.g., a loan installment)."
        }
      },
      "required": [
        "accountId",
        "description",
        "amount",
        "date",
        "type"
      ]
    },
    "Category": {
      "title": "Category",
      "description": "Represents a transaction category.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the category."
        },
        "name": {
          "type": "string",
          "description": "The name of the category."
        },
        "type": {
          "type": "string",
          "enum": [
            "receita",
            "despesa"
          ],
          "description": "The type of transaction this category applies to."
        }
      },
      "required": [
        "name",
        "type"
      ]
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/customers/{customerId}": {
      "schema": {
        "$ref": "#/entities/Customer"
      },
      "description": "Stores customer profile information."
    },
    "/loans/{loanId}": {
      "schema": {
        "$ref": "#/entities/Loan"
      },
      "description": "Stores all loan information, including installments."
    },
    "/bankAccounts/{accountId}": {
      "schema": {
        "$ref": "#/entities/BankAccount"
      },
      "description": "Stores bank account information."
    },
    "/bankAccounts/{accountId}/transactions/{transactionId}": {
      "schema": {
        "$ref": "#/entities/Transaction"
      },
      "description": "Stores all transactions for a specific bank account."
    },
    "/categories/{categoryId}": {
      "schema": {
        "$ref": "#/entities/Category"
      },
      "description": "Stores transaction categories."
    }
  }
}